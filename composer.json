{
  "name": "kas-cor/mvc",
  "license": "MIT",
  "description": "MVC Pattern",
  "keywords": [
    "php7",
    "doctrine-orm",
    "phinx",
    "bootstrap4",
    "jquery"
  ],
  "authors": [
    {
      "name": "kas-cor",
      "email": "kascorp@gmail.com"
    }
  ],
  "homepage": "https://github.com/kas-cor/mvc",
  "support": {
    "issues": "https://github.com/kas-cor/mvc/issues"
  },
  "require": {
    "php": ">=7.2.0",
    "bower-asset/bootstrap": "^4.3.1",
    "bower-asset/jquery": "^3.4.1",
    "doctrine/orm": "^2.6.3",
    "npm-asset/normalize.css": "^8.0.1",
    "robmorgan/phinx": "^0.10.8",
    "vlucas/phpdotenv": "^3.4.0"
  },
  "autoload": {
    "psr-4": {
      "app\\": "app/"
    },
    "autoload-dev": {
      "psr-4": {
        "Tests\\": "tests/"
      }
    },
    "classmap": [
      "db/migrations",
      "db/seeds"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "process-timeout": 1800,
    "fxp-asset": {
      "enabled": false
    }
  },
  "extra": {
    "asset-installer-paths": {
      "bower-asset-library": "vendor/bower-asset"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^8.3"
  }
}
